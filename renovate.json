{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "flux",
    "helm-values"
  ],
  "flux": {
    "managerFilePatterns": [
      "/^.*\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/^.*values.*\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "flux"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2
}
