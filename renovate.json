{
  "extends": ["config:base"],
  "enabledManagers": ["flux", "helm-values", "regex"],
  "flux": {
    "fileMatch": ["^.*\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["^.*values.*\\.ya?ml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["^.*\\.ya?ml$"],
      "matchStrings": [
        "clusterVersion:\\s*(?<currentValue>v\\d+\\.\\d+\\.\\d+)-cluster"
      ],
      "depNameTemplate": "VictoriaMetrics/VictoriaMetrics",
      "datasourceTemplate": "github-tags",
      "description": "Track VictoriaMetrics clusterVersion (manual suffix update needed)"
    },
    {
      "fileMatch": ["^.*\\.ya?ml$"],
      "matchStrings": [
        "kind:\\s*VMAgent[\\s\\S]*?image:[\\s\\S]*?tag:\\s*(?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "victoriametrics/vmagent",
      "datasourceTemplate": "github-releases",
      "description": "Update image tag for VMAgent"
    },
    {
      "fileMatch": ["^.*\\.ya?ml$"],
      "matchStrings": [
        "kind:\\s*VMAlert[\\s\\S]*?image:[\\s\\S]*?tag:\\s*(?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "victoriametrics/vmalert",
      "datasourceTemplate": "github-releases",
      "description": "Update image tag for VMAlert"
    },
    {
      "fileMatch": ["^.*\\.ya?ml$"],
      "matchStrings": [
        "kind:\\s*VMCluster[\\s\\S]*?image:[\\s\\S]*?tag:\\s*(?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "victoriametrics/vmcluster",
      "datasourceTemplate": "github-releases",
      "description": "Update image tag for VMCluster"
    },
    {
      "fileMatch": ["^.*values.*\\.ya?ml$", "^.*\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s*\\ntag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?",
        "# renovate: image=(?<depName>.*?)\\s*\\ntag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "datasourceTemplate": "docker",
      "description": "Update Docker images with renovate comments"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["flux"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": ["helm-values"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": ["helm-values"],
      "matchUpdateTypes": ["minor", "major"],
      "automerge": false
    },
    {
      "matchManagers": ["regex"],
      "matchDepNames": ["VictoriaMetrics/VictoriaMetrics"],
      "automerge": false,
      "description": "Manual review for VictoriaMetrics versions"
    },
    {
      "matchManagers": ["regex"],
      "matchFileNames": [
        "**/vmagent.yaml",
        "**/vmalert.yaml"
      ],
      "matchDepNames": ["VictoriaMetrics/VictoriaMetrics"],
      "automerge": false,
      "minimumReleaseAge": "3 days",
      "description": "VMAgent version updates with shorter release age"
    },
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "2 days"
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3
}
