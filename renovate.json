{
  "extends": ["config:base"],
  "enabledManagers": ["flux", "helm-values", "regex"],
  "flux": {
    "fileMatch": ["^.*\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["^.*values.*\\.ya?ml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["vmagent.yaml"],
      "matchStrings": [
        "tag:\\s?(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "victoriametrics/vmagent",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": ["vmalert.yaml"],
      "matchStrings": [
        "tag:\\s?(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "victoriametrics/vmalert",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": ["vmalertmanager.yaml"],
      "matchStrings": [
        "tag:\\s?(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "prom/alertmanager",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": ["vmauth.yaml"],
      "matchStrings": [
        "tag:\\s?(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "victoriametrics/vmauth",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": ["^.*\\.ya?ml$"],
      "matchStrings": [
        "clusterVersion:\\s*(?<currentValue>v\\d+\\.\\d+\\.\\d+)-cluster"
      ],
      "depNameTemplate": "VictoriaMetrics/VictoriaMetrics",
      "datasourceTemplate": "github-tags",
      "description": "Track VictoriaMetrics clusterVersion (manual suffix update needed)"
    },
    {
      "fileMatch": ["^.*values.*\\.ya?ml$", "^.*\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s*\\ntag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?",
        "# renovate: image=(?<depName>.*?)\\s*\\ntag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "datasourceTemplate": "docker",
      "description": "Update Docker images with renovate comments"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["flux"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": ["helm-values"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": ["helm-values"],
      "matchUpdateTypes": ["minor", "major"],
      "automerge": false
    },
    {
      "matchManagers": ["regex"],
      "matchDepNames": ["VictoriaMetrics/VictoriaMetrics"],
      "automerge": false,
      "description": "Manual review for VictoriaMetrics versions"
    },
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "2 days"
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3
}
