{
  "extends": ["config:base"],
  "enabledManagers": ["flux", "helm-values", "regex"],
  "flux": {
    "fileMatch": ["^.*\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["^.*values.*\\.ya?ml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["^.*\\.ya?ml$"],
      "matchStrings": [
        "clusterVersion:\\s*[\"']?(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+-cluster)[\"']?",
        "version:\\s*[\"']?(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+-cluster)[\"']?"
      ],
      "depNameTemplate": "VictoriaMetrics/VictoriaMetrics",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^(?<version>v[0-9]+\\.[0-9]+\\.[0-9]+)-cluster$",
      "description": "Update VictoriaMetrics cluster versions with -cluster suffix"
    },
    {
      "fileMatch": ["^.*values.*\\.ya?ml$", "^.*\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s*\\n\\s*tag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?",
        "# renovate: image=(?<depName>.*?)\\s*\\n\\s*tag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?",
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s*\\n.*?image:\\s*[\"']?.*?:(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "datasourceTemplate": "docker",
      "description": "Update Docker images with renovate comments"
    },
    {
      "fileMatch": ["^.*\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=github-releases depName=(?<depName>VictoriaMetrics\\/VictoriaMetrics)\\s*\\n.*?(?:version|clusterVersion):\\s*[\"']?(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+-cluster)[\"']?"
      ],
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^(?<version>v[0-9]+\\.[0-9]+\\.[0-9]+)-cluster$",
      "description": "Update VictoriaMetrics versions with explicit renovate comment"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["flux"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": ["helm-values"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": ["helm-values"],
      "matchUpdateTypes": ["minor", "major"],
      "automerge": false
    },
    {
      "matchManagers": ["regex"],
      "matchDepNames": ["VictoriaMetrics/VictoriaMetrics"],
      "automerge": false,
      "minimumReleaseAge": "7 days",
      "description": "Manual review for VictoriaMetrics versions - critical infrastructure"
    },
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "2 days"
    },
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "major"],
      "automerge": false,
      "description": "Major Docker updates require manual review"
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3,
  "schedule": ["before 3am on Monday"],
  "timezone": "Europe/Berlin",
  "labels": ["dependencies", "renovate"],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true
}